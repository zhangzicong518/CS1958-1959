{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: g++.exe 生成调试活动文件",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
